<% -layout("/layouts/boilerplates.ejs")%>

<body>

  <div class="col-6 offset-2 mb-3 mt-3 "><h3>Signup on Address Updater</h3></div>
  <div class="row">
      <div class="col-8 offset-2">
       <br>

<form action="/signup" id="signup" method="post" novalidate class="needs-validation">
  <div class="mb-3">
    <label for="username" claas="form-lable">Username:</label>
    <input
      type="text"
      id="username"
      name="username"
      class="form-control"
      required
    />
    <div class="invalid-feedback">
      start with character, contains atleast 4 characters alphanumeric ,contain only '_'.
    </div>
  
    </div>

    <div class="mb-3">
      <label for="Email" claas="form-lable">Email:</label>
      <input
        type="email"
        id="Email"
        name="email"
        class="form-control"
        required
      />
      </div>
      <div class="invalid-feedback">
        Please provide valid email address.
      </div>

  <div class="mb-3">
    <label for="Password" claas="form-lable">Password:</label>
    <input type="password" id="Password" name="password"
    class="form-control"

    required />
    <div class="invalid-feedback">
      Password must be at least 8 characters long and contain one uppercase and one special character.
    </div>
    </div>
  <br>
  <div class="mb-3 d-flex">Already have Account? &nbsp;<a class="nav-link" href="/login"><b>Login</b></a></div>
    
  <div class="mb-3"><button class=" btn btn-success ">Signup</button></div> 
</form>
</div>
</div>
</body>
