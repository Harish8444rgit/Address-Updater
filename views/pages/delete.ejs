<% layout("/layouts/boilerplates.ejs")%>

  <body>
    <div>
      <br />
      <br />
      <div class="row">
        <div class="col-8 offset-2">
          <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="text-start">
                <h5 class="mb-1">
                  Are you sure you want to delete this address?
                </h5>
                <p class="text-muted mb-0">
                  Street: <%= address.street %><br />
                    City: <%= address.city %><br />
                      State: <%= address.state %><br />

                        Zip Code: <%= address.zipCode %><br />
                          Country: <%= address.country %><br />
                </p>
              </div>
              <div class="d-flex">
                <a href="/users/<%= currUser.id %>/addresses/" class="btn btn-info me-2 fs-5">No</a>
                <form method="POST"
                  action="/users/<%= currUser.id %>/addresses/<%= address._id %>/delete?_method=DELETE">
                  <button class="btn btn-danger me-2 fs-5" type="submit">
                    Yes
                  </button>
                </form>
              </div>
            </div>
            <hr />
          </div>
        </div>
      </div>
    </div>
  </body>